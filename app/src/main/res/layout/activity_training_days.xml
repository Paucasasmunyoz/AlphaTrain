<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#684485">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:text="Elige tus días de entrenamiento"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkLunes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkMartes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Martes"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkMiercoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miércoles"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkJueves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jueves"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkViernes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viernes"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkSabado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sábado"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkDomingo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domingo"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar días"
            android:backgroundTint="#684485"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</LinearLayout>